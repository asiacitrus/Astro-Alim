        localStorage.setItem('recentInsights',JSON.stringify(recentInsightsArr));
    }

    let myElements = document.querySelectorAll(".fn");

    for (let i = 0; i < myElements.length; i++) {
        myElements[i].style.cursor="pointer";
        myElements[i].onclick=(e)=>{
