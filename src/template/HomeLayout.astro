        </div>
      </div>      
    </div>
    <div class="grid  md:grid-cols-12 gap-0 md:gap-5 mb-10">
      {
      testimonials.map((item)=>{
        counter++;
        return(<Testimonial testimonial={item} count={counter}/>)
      })
      }
    </div>
    <div class="md:mt-20 md:mb-20 mt-8 mb-16 text-right">
      <a href="/communitySpotlights" class="button-style px-8 bg-deep-red" > Read more </a>
