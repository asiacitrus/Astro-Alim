let counter=0;
const testimonials=[];
// const postImg=['images/tips1-img.jpg','images/tips2-img.jpg','images/tips3-img.jpg','images/tips4-img.jpg']

for(let i=0;i<6;i++)
{
  testimonials.push(testimonialJson[i]);
}
