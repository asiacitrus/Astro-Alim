---
import DailyInsight from "../components/DailyInsight.astro";
import Testimonial from "../components/Testimonial.astro";
import RecentPost from "../components/RecentPosts.astro";
import Navbar from "../components/Navbar.astro";
import FooterComponent from "../components/FooterComponent.astro";
import testimonialJson from "../data/testimonials/testimonials.json";
import RecentInsights from "../components/RecentInsights.astro";
import PopupMenu from "../components/PopupMenu.astro";
